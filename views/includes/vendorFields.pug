h1 #{formTitle}
label
  span Company Name *
  input(type="text" name="company_name" placeholder="Company name" value=vendor.company_name required)
label
  span DBA
  input(type="text" name="dba" placeholder="Doing business as" value=vendor.dba)
label
  span Business Registration Number *
  input(type="text" name="business_reg_num" placeholder="Business Registration #" value=vendor.business_reg_num required)
label
  span Address Line 1 *
  input(type="text" name="address1" placeholder="Address/P.O. Box/Company Name" value=vendor.address1 required)
label
  span Address Line 2
  input(type="text" name="address2" placeholder="Apt/Suite/Unit/Building/Floor/etc" value=vendor.address2)
label
  span City *
  input(type="text" name="city" placeholder="City" value=city required)
label
  span Zip Code *
  input(type="text" name="zipcode" placeholder="Zip Code" value=zip required)
label
  span Island *
  input(type="text" name="island" placeholder="Island" value=island required)
label
  span Business Phone Number 1 *
  input(type="tel" name="business_ph" placeholder="Business Number 1" value=vendor.business_ph required)
label
  span Business Phone Number 2
  input(type="tel" name="phoneTwo" placeholder="Business Number 2" value=vendor.phoneTwo)
label
  span Sales Contact Phone Number *
  input(type="tel" name="sales_ph" placeholder="Sales Number" value=vendor.sales_ph required)
label
  span E-mail *
  input(type="email" name="email" placeholder="E-mail" value=vendor.email required)
label
  span Website
  input(type="url" name="website" placeholder="Website" value=vendor.website)
label
  span Image
  input(type="url" name="image" placeholder="Image Link" value=vendor.image)
label.checkboxes
  span Type of Business:
  +selectWithOther("job", businessType, checkBoxBusinessType)
label.checkboxes
  span Services:
  +selectWithOther("service", services, checkBoxServices)
label.checkboxes
  span Markets:
  +selectWithOther("market", markets, checkBoxMarkets)
label.checkboxes
  span Certifications/Specialty:
  +selectWithOther("specialty", certs, checkBoxCerts)
input(type="submit" value="Submit" class="submit")