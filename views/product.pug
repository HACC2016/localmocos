doctype html
html(lang="en")
  include includes/head.pug
  body
    div.container
      include includes/nav.pug
      include includes/search.pug
      div.main-content
        div.flex-container
          div.col-half
            if product.image
              img.product-main-image(src= product.image)
            else
              img.product-main-image(src="/images/photo-not-available-525x350.jpg")
          div.col-half
            h2 #{product.name}
            p #{product.description}
            hr
            h4 #{vendor}
            p <strong>Address:</strong> #{address}
            p <strong>Phone:</strong> #{phone}
            p <strong>Email:</strong>
              if email
                a(href="mailto:" + email)  #{email}
              else
                |  N/A
            p <strong>Website:</strong>
              if website
                a(href= website, target="_blank")  #{website}
              else
                |  N/A
        if products.length > 0
          div.business-products
            h3 Other Products From The Same Vendor
            div.flex-container-4col
              - for (var i = 0; i < products.length; i++) {
                div(class="col-quarter single-product")
                  div.single-product-image
                    a(href="/product/" + products[i].id)
                      if products[i].image
                        img(src= products[i].image)
                      else
                        img(src="/images/photo-not-available-250x200.jpg")
                  div.single-product-info
                    h6
                      a(href="/product/" + products[i].id)= products[i].name
              - }
      include includes/footer.pug