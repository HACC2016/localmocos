doctype html
html(lang="en")
  include includes/head.pug
  body
    div.container
      include includes/nav.pug
      include includes/search.pug
      div.main-content
        div.flex-container
          div.col-half
            if image
              img.product-main-image(src= image)
            else
              img.product-main-image(src="https://placehold.it/525x350")
          div.col-half
            h2 #{product}
            p #{description}
            hr
            h4 #{vendor}
            p <strong>Address:</strong> #{address}
            p <strong>Phone:</strong> #{phone}
            p <strong>Email:</strong>
              if email
                a(href="mailto:" + email)  #{email}
              else
                |  N/A
            p <strong>Website:</strong>
              if website
                a(href= website, target="_blank")  #{website}
              else
                |  N/A
        div.business-products
          h3 Other Products From The Same Vendor
          div.flex-container-4col
            - for (var i = 0; i < products.length; i++) {
              div(class="col-quarter single-product")
                div.single-product-image
                  a(href="#")
                    if products[i].image
                      img(src= products[i].image)
                    else
                      img(src="https://placehold.it/250x200")
                div.single-product-info
                  h6
                    a(href="#")= products[i].name
            - }
      include includes/footer.pug